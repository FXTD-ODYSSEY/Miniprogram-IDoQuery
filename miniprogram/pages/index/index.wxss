.title {
  margin: auto;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size:72rpx;
  font-weight: 30rpx;
  color: white;
  background: rgb(70, 90, 230);
  border-top: 5rpx lightgray solid;
  border-bottom: 5rpx lightgray solid;
}

.button_container {
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.button_container button{
  width: 300rpx;
  height: 300rpx;
  border-radius: 20%;
  text-align: center;
  vertical-align:middle;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 90rpx;
  font-weight: 30rpx;
  border: 5rpx black solid;
  line-height: 100%;
}

