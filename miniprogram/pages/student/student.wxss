/* pages/student/student.wxss */

page{
  background: rgb(0, 176, 80)
}

.title {
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 72rpx;
  font-weight: bold;
  color: white;
  background: hsl(147, 100%, 45%);
  border-top: 5rpx lightgray solid;
  border-bottom: 5rpx lightgray solid;
}

.student_form {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.student_form .student_view {
  font-weight: bold;
  border: 5rpx black solid;
  background: white;
  font-size: 45rpx;
  margin: 50rpx 0;
  padding: 15rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.student_form .student_view input {
  font-weight: bold;
  text-align: center;
  border: 5rpx black solid;
  border-radius: 30rpx;
  height: 100rpx;
  color: white;
}

.student_form button {
  font-weight: bold;
  border: 5rpx black solid;
}


.select_box {
  position: relative;
  width: 80%;
}

.select {
  border: 5rpx black solid;
  box-sizing: border-box;
  width: 100%;
  height: 86rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.select_text {
  text-align: center;
  font-size: 40rpx;
  flex: 1;
  color: white;
  line-height: 86rpx;
  height: 86rpx;
}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  border: 5rpx black solid;
  border-radius: 30rpx;
  z-index: 9999;
  position: absolute;
  top: 86rpx;
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  transition: height 0.3s;
}

.option {
  text-align: center;
  display: block;
  line-height: 40rpx;
  font-size: 40rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  color: white;
}